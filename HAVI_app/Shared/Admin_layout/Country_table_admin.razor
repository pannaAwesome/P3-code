@using BlazorTable
@inject NavigationManager NavigationManager

<div class="modal fade" id="deleting-rows" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Deleting country</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the entire country?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn cancel-button" data-dismiss="modal">Close</button>
                <button type="button" class="btn red-button">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <Table TableItem="SupplierInfo" Items="supplierdata" ColumnReorder="true" TableHeadClass="purple-table-header" TableRowClass="@(x => x.RowClass)" ShowSearchBar="true">
            <Column TableItem="SupplierInfo" Title="Country" Field="@(x => x.Country)" DefaultSortColumn="true" Sortable="true"/>
            <Column TableItem="SupplierInfo" Title="Country code" Field="@(x => x.Countrycode)" Sortable="true" />
            <Column TableItem="SupplierInfo" Title="Admin" Field="@(x => x.Admin)" Sortable="true" />
            <Column TableItem="SupplierInfo" Title="" Field="@(x => x.Country)">
                <Template>
                    <button class="btn green-button" @onclick="@((x) => EditCountry(context.Country))">Edit</button>
                </Template>
            </Column>
            <Column TableItem="SupplierInfo" Title="">
                <Template>
                    <button class="btn delete-button" data-toggle="modal" data-target="#deleting-rows">Delete</button>
                </Template>
            </Column>
            <EmptyDataTemplate>
                <div class="text-center">
                    There are no new article informations!
                </div>
            </EmptyDataTemplate>
        </Table>
    </div>
</div>

@code{
    private SupplierInfo[] supplierdata;

    private SelectionType selectionType;

    private List<SupplierInfo> selectedItems = new List<SupplierInfo>();

    private SupplierInfo selected;

    private string hideornot = "hide-trash";

    protected override void OnInitialized()
    {
        supplierdata = new SupplierInfo[]{
            new SupplierInfo("Denmark", "DK", "DKAdmin"),
            new SupplierInfo("Sweden", "SE", "SEAdmin"),
            new SupplierInfo("Norway", "NO", "NOAdmin")
            };
    }


    private void EditCountry(string country)
    {
        NavigationManager.NavigateTo("/edit_country", true);
    }

    public class SupplierInfo
    {
        public SupplierInfo(string country, string countrycode, string admin)
        {
            Country = country;
            Countrycode = countrycode;
            Admin = admin;
        }

        public string Countrycode { get; set; }
        public string Country { get; set; }
        public string Admin { get; set; }

        public string RowClass => "table tabel-row";
    }
}