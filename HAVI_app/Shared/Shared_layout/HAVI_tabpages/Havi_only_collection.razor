<button class="btn green-button" @onclick="PageUp">Next</button>
<button class="btn green-button" @onclick="PageDown">Back</button>


@code{
    private int PageIndex = 0;

    private void PageUp()
    {
        PageIndex++;
        if(PageIndex > 4)
        {
            PageIndex = 4;
        }
    }
    private void PageDown()
    {
        PageIndex--;
        if(PageIndex < 0)
        {
            PageIndex = 0;
        }
    }
}