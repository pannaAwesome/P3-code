<div class="col-12 havi-info-box">
<div class="row justify-content-right">
    <div class="col-11">
        <h4> Article Information:</h4>
    </div>
    <div class="col-1">
        @if (EditingFields)
        {
            <div class="save-button" @onclick="Saving"></div>
            IsDisabled = false;
        }
        else
        {
            <div class="edit-button" @onclick="Editing"></div>
            IsDisabled = true;
        }

    </div>
</div>
    <table class="table table-borderless">
        <tr class="@ArticleName">
            <td>
                <label for="article_name">Article name:</label>
            </td>
            <td colspan="2">
                <input type="text" class="form-control" name="article_name" value="Peanuts" disabled="@IsDisabled">
            </td>
        </tr>

        <tr class="@Salesunit">
            <td>
                <label for="sales_unit">Salesunit:</label>
            </td>
            <td colspan="2">
                <input type="text" class="form-control" name="sales_unit" value="Bakke // 374" disabled>
            </td>
        </tr>

        <tr class="@ArticlePerSalesunit">
            <td>
                <label for="salesunit_quantity">Articles per salesunit:</label>
            </td>
            <td colspan="2">
                <input type="number" class="form-control" name="salesunit_quantity" value="123" disabled="@IsDisabled">
            </td>
        </tr>

        <tr class="@SupplierNameNumber">
            <td>
                <label for="supplier_article_nn">Supplier article number/name:</label>
            </td>
            <td colspan="2">
                <input type="number" class="form-control" name="article_number_name" value="12312442123" disabled="@IsDisabled">
            </td>
        </tr>

        <tr class="@GTINNumber">
            <td>
                <label for="GTIN">GTIN number:</label>
            </td>
            <td colspan="2">
                <input type="number" class="form-control" name="GTIN" value="12312312412312" disabled="@IsDisabled">
            </td>
        </tr>

        <tr class="@Shelflife">
            <td>
                <label for="Shelflife">Shelflife:</label>
            </td>
            <td colspan="2">
                <input type="number" class="form-control" name="Shelflife" value="2" disabled="@IsDisabled">
            </td>
            <td>
                <label class="center-for-units" for="Shelflife">days</label>
            </td>
        </tr>

        <tr class="@MinShelflife">
            <td>
                <label for="Min_shelflife">Min. shelflife at HAVI:</label>
            </td>
            <td colspan="2">
                <input type="number" class="form-control" name="Min_shelflife" value="12" disabled="@IsDisabled">
            </td>
            <td>
                <label class="center-for-units" for="Min_shelflife">days</label>
            </td>
        </tr>

        <tr class="@OrganicArticle">
            <td>
                <label for="organic_article" value="">Organic article?</label>
            </td>

            <td colspan="2">
                <div class="text-center">
                    <input type="radio" name="organic_article" value="yes" disabled>
                    <label for="yes">Yes</label>
                    &nbsp;
                    <input type="radio" name="organic_article" value="no" checked disabled>
                    <label for="no">No</label>
                </div>
            </td>
        </tr>
    </table>
</div>

@code {

    [Parameter]
    public string ArticleName { get; set; }

    [Parameter]
    public string Salesunit { get; set; }

    [Parameter]
    public string ArticlePerSalesunit { get; set; }

    [Parameter]
    public string SupplierNameNumber { get; set; }

    [Parameter]
    public string GTINNumber { get; set; }

    [Parameter]
    public string Shelflife { get; set; }

    [Parameter]
    public string MinShelflife { get; set; }

    [Parameter]
    public string OrganicArticle { get; set; }

    protected bool IsDisabled = true;
    
    private bool EditingFields = false;
    
    private void Editing()
    {
        EditingFields = true;
    }

    private void Saving()
    {
        EditingFields = false;
    }
}