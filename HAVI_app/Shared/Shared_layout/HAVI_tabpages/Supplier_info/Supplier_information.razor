@inherits SupplierInformation
<div class="col-12 havi-info-box">
<div class="row justify-content-right">
    <div class="col-11">
        <h4> Supplier Information:</h4>
    </div>
    <div class="col-1">
        @if (EditingFields)
        {
            <div class="save-button" @onclick="Saving"></div>
        }
        else
        {
            <div class="edit-button" @onclick="Editing"></div>
        }

    </div>
</div>
<table class="table table-borderless">
    <tr>
        <td>
            <label for="company_name">Company name:</label>
        </td>
        <td colspan="2">
            <input type="text" class="form-control" name="company_name" @bind="Article.ArticleInformation.CompanyName" disabled="@IsDisabled">
        </td>
    </tr>

    <tr>
        <td>
            <label for="company_location">Company location:</label>
        </td>
        <td colspan="2">
            <input type="text" class="form-control" name="company_location" @bind="Article.ArticleInformation.CompanyLocation" disabled>
        </td>
    </tr>

    <tr>
        <td>
            <label for="email">Email:</label>
        </td>
        <td colspan="2">
            <input type="text" class="form-control" name="email" @bind="Article.ArticleInformation.Email" disabled="@IsDisabled">
        </td>
    </tr>

    <tr>
        <td>
            <label for="pallet_exchange" value="">Pallet exchange</label>
        </td>
        <td colspan="2">
            <div class="text-center">
                <input type="radio" name="pallet_exchange" id="yes" value="yes" checked="@(Article.ArticleInformation.PalletExchange == 1)" disabled @onclick="() => Article.ArticleInformation.PalletExchange = 1">
                <label for="yes">Yes</label>
                &nbsp;
                <input type="radio" id="no" name="pallet_exchange" checked="@(Article.ArticleInformation.PalletExchange == 0)" disabled @onclick="() => Article.ArticleInformation.PalletExchange = 0">
                <label for="no">No</label>
            </div>
        </td>
    </tr>

    <tr>
        <td>
            <label for="freight_responsibility" value="">Freight responsibility</label>
        </td>
        <td colspan="2">
            <input type="text" class="form-control" name="freight" @bind="Article.ArticleInformation.FreightResponsibility"/>
        </td>
    </tr>

    <tr>
        <td colspan="3">
            <label for="special_info">Special information regarding the article or cooperation?</label>
            <textarea class="form-control" name="special_info" @bind="Article.ArticleInformation.SpecialInformation" disabled="@IsDisabled">Absolutely none</textarea>
        </td>
    </tr>

    <tr>
        <td>
            <label for="transport" value="">Are you in charge of booking transport?</label>
        </td>

        <td colspan="2">
            <div class="text-center">
                <input type="radio" name="transport" value="yes" checked="@(Article.ArticleInformation.TransportBooking == 1)" disabled @onclick="() => Article.ArticleInformation.TransportBooking = 1">
                <label for="yes">Yes</label>
                &nbsp;
                <input type="radio" value="no" name="transport" checked="@(Article.ArticleInformation.TransportBooking == 0)" disabled @onclick="() => Article.ArticleInformation.TransportBooking = 0">
                <label for="no">No</label>
            </div>
        </td>
    </tr>
    @if (Article.ArticleInformation.TransportBooking == 1)
    {
        <tr>
            <td>
                <label for="class">Transit time:</label>
            </td>
            <td>
                <input type="number" class="form-control" @bind="Article.ArticleInformation.TransitTime" disabled>
            </td>
            <td>
                <label for="class" class="labels">days</label>
            </td>
        </tr>
    }

    <tr>
        <td>
            <label for="dangerous" value="">Is the article classified as dangerous goods (ADR)?</label>
        </td>
        <td colspan="2">
            <div class="text-center">
                <input type="radio" name="dangerous" value="yes" checked="@(Article.ArticleInformation.DangerousGoods == 1)" disabled @onclick="() => Article.ArticleInformation.DangerousGoods = 1" />
                <label for="yes">Yes</label>
                &nbsp;
                <input type="radio" value="no" name="dangerous" checked="@(Article.ArticleInformation.DangerousGoods == 0)" disabled @onclick="() => Article.ArticleInformation.DangerousGoods = 0" />
                <label for="no">No</label>
            </div>
        </td>
    </tr>
    @if (Article.ArticleInformation.DangerousGoods == 1)
    {
        <tr>
            <td>
                <label for="class">Class:</label>
            </td>
            <td colspan="2">
                <input type="text" class="form-control" @bind="Article.ArticleInformation.Class" disabled>
            </td>
        </tr>

        <tr>
            <td>
                <label for="classificationCode">Classification code:</label>
            </td>
            <td colspan="2">
                <input type="number" class="form-control" @bind="Article.ArticleInformation.ClassificationCode" disabled="@IsDisabled">
            </td>
        </tr>
    }
</table>
</div>