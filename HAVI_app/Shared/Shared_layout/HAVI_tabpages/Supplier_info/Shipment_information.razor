@inherits ShipmentInformation 
<div class="col-12 havi-info-box">

    <div class="row justify-content-right">
        <div class="col-11">
            <h4> Shipment Information:</h4>
        </div>
        <div class="col-1">
            @if (EditingFields)
            {
                <div class="save-button" @onclick="Saving"></div>
            }
            else
            {
                <div class="edit-button" @onclick="Editing"></div>
            }

        </div>
    </div>    
    @if (Article != null)
    {
    <table class="table table-borderless">
        <tr>
            <td colspan="3">
                <label for="carton_pr_pallet">Cartons per pallet:</label>
            </td>
            <td colspan="3">
                <input type="number" class="form-control" id="carton_pr_pallet" @bind="Article.ArticleInformation.CartonsPerPallet" disabled>
            </td>
        </tr>

        <tr>
            <td colspan="3">
                <label for="carton_pr_layer">Cartons per layer:</label>
            </td>
            <td colspan="3">
                <input type="number" class="form-control" @bind="Article.ArticleInformation.CartonsPerLayer" disabled>
            </td>
        </tr>


        <tr>
            <td colspan="3">
                <label for="country_origin">Country of origin:</label>
            </td>
            <td colspan="3">
                <input type="text" class="form-control" @bind="Article.ArticleInformation.CountryOfOrigin" disabled>
            </td>
        </tr>

        <tr>
            <td colspan="3">
                <label for="imported_from">Imported from:</label>
            </td>
            <td colspan="3">
                <input type="text" class="form-control" @bind="Article.ArticleInformation.ImportedFrom" disabled>
            </td>
        </tr>

        <tr>
            <td colspan="3">
                <label for="toll_tarrif_no">Toll-tarrif no:</label>
            </td>
            <td colspan="3">
                <input type="number" class="form-control" id="toll_tarrif_no" @bind="Article.ArticleInformation.TollTarifNumber" disabled>
            </td>
        </tr>

        <tr>
            <td colspan="3">
                <label for="minimum_order_quantity">Minimum order quantity:</label>
            </td>
            <td colspan="3">
                <input type="number" class="form-control" id="minimum_order_quantity" @bind="Article.ArticleInformation.MinimumOrderQuantity" disabled>
            </td>
        </tr>

        <tr>
            <td colspan="6">
                    <label for="temprature_during_transportation">Temperature during transportation:</label>
            </td>
        </tr>
        <tr>
            <td>
                    <label class="center-for-units" for="min">Min:</label>
            </td>
            <td>
                    <input type="number" class="form-control" id="min" @bind="Article.ArticleInformation.TemperatureTransportationMin" disabled>
            </td>
            <td>
                    <label class="center-for-units" for="degrees">&#8451;</label>
            </td>
            <td>
                    <label class="center-for-units" for="max">Max:</label>
            </td>
            <td>
                    <input type="number" class="form-control" id="max" @bind="Article.ArticleInformation.TemperatureTransportationMax" disabled>
            </td>
            <td>
                    <label class="center-for-units" for="degrees">&#8451;</label>
            </td>
        </tr>

        <tr>
            <td colspan="6">
                <label for="temprature_storage">Storage temperature requirements:</label>
            </td>
        </tr>
        <tr>
            <td>
                    <label class="center-for-units" for="min">Min:</label>
            </td>
            <td>
                    <input type="number" class="form-control" id="min" @bind="Article.ArticleInformation.TemperatureStorageMin" disabled>
            </td>
            <td>
                    <label class="center-for-units" for="degrees">&#8451;</label>
            </td>
            <td>
                    <label class="center-for-units" for="max">Max:</label>
            </td>
            <td>
                    <input type="number" class="form-control" id="max"  @bind="Article.ArticleInformation.TemperatureStorageMax" disabled>
            </td>
            <td>
                    <label class="center-for-units" for="degrees">&#8451;</label>
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <label for="lead_time">Lead time:</label>
            </td>
            <td colspan="2">
                <input type="number" class="form-control" id="lead_time" @bind="Article.ArticleInformation.LeadTime" disabled>
            </td>
            <td colspan="2">
                <div class="text-right">
                    <label class="center-for-units" for="lead_time">days</label>
                </div>
            </td>
        </tr>
    </table>}
</div>
