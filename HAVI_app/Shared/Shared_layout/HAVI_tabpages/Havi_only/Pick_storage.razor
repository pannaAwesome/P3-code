@page "/pick_storage"
@layout HAVI_app.Shared.Admin_layout.Show_artikel_layout

<ul class="nav nav-tabs" id="myTabJust" role="tablist">
    <li class="nav-item">
        <a class="nav-link active navtabs-background" id="HAVI-tab-just" data-toggle="tab" href="#HAVI-just" role="tab" aria-controls="HAVI-just"
           aria-selected="true"><small class="nav-text">HAVI Only</small></a>
    </li>
    <li class="nav-item">
        <a class="nav-link navtabs-background" id="Supplier-tab-just" data-toggle="tab" href="#Supplier-just" role="tab" aria-controls="Supplier-just"
           aria-selected="false"><small class="nav-text">Supplier info</small></a>
    </li>
    <li class="nav-item">
        <a class="nav-link navtabs-background error-tab" id="Error-tab-just" data-toggle="tab" href="#Error-just" role="tab" aria-controls="Error-just"
           aria-selected="false"><small class="nav-text error-tab">Report Error</small></a>
    </li>
</ul>

<div class="tab-content background-tabs" id="myTabContentJust">
    <div class="tab-pane fade show active" id="HAVI-just" role="tabpanel" aria-labelledby="HAVI-tab-just">
        <h3>Pick storage</h3>

        <div class="justify-content-center row">
            <div class="col-6">
                <form>
                    <table class="table">
                        <tr>
                            <td>
                                <label for="primary_dc" class="required">Primary DC ILOS Code:</label>
                            </td>
                            <td>
                                <select class="form-control" name="primary_dc">
                                    <option disabled selected>-- select an option --</option>
                                    <option>400</option>
                                    <option>500</option>
                                    <option>600</option>
                                </select>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <label for="sap_plant1" class="required">SAP Plant: 0640 // 400 </label>
                            </td>
                            <td>
                                <input type="radio" name="sap_plant1" id="yes" value="yes">
                                <label for="yes">Yes</label>
                                &nbsp;
                                <input type="radio" id="no" name="sap_plant1">
                                <label for="no">No</label>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <label for="sap_plant2" class="required">SAP Plant: 0650 // 500 </label>
                            </td>
                            <td>
                                <input type="radio" name="sap_plant2" id="yes" value="yes">
                                <label for="yes">Yes</label>
                                &nbsp;
                                <input type="radio" id="no" name="sap_plant2">
                                <label for="no">No</label>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <label for="sap_plant3" class="required">SAP Plant: 0660 // 600 </label>
                            </td>
                            <td>
                                <input type="radio" name="sap_plant3" id="yes" value="yes">
                                <label for="yes">Yes</label>
                                &nbsp;
                                <input type="radio" id="no" name="sap_plant3">
                                <label for="no">No</label>
                            </td>
                        </tr>

                    </table>
                </form>
            </div>
        </div>

    </div>
    <div class="tab-pane fade" id="Supplier-just" role="tabpanel" aria-labelledby="Supplier-tab-just">
        <div class="row">
        </div>
    </div>
    <div class="tab-pane fade" id="Error-just" role="tabpanel" aria-labelledby="Error-tab-just">
        <HAVI_app.Shared.Shared_layout.HAVI_tabpages.Report_new_error />
    </div>
</div>

