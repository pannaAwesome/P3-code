@layout HAVI_app.Shared.Supplier_layout.Overview_layout
@inject NavigationManager NavigationManager
@page "/overview_supplier"

<div class="container">
    <div class="col-12">
        <div class="row">
            <div class="col-10">
                <h1>Welcome Hello and co.</h1>
            </div>
            <div class="col-2">
                <button>Add article</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">


            <table class="table table-hover">
                <thead class="table-header-blue">
                    <tr>
                        <th>
                            <input type="checkbox" name="product_element" />
                        </th>

                        <th>Article number</th>
                        <th>Article name </th>
                        <th>Vailed for customer </th>
                        <th>HAVI employee </th>
                        <th>Date created </th>
                        <th>State </th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < 5; i++)
                    {

                        <tr>
                            <td>
                                <input type="checkbox" name="product_element" />
                            </td>
                            <td @onclick="RowWasHit">1</td>
                            <td @onclick="RowWasHit">2</td>
                            <td @onclick="RowWasHit">3</td>
                            <td @onclick="RowWasHit">4</td>
                            <td @onclick="RowWasHit">5</td>
                            <td @onclick="RowWasHit">
                                <div class="created-state state">Created</div>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@code{
    private void RowWasHit()
    {
        NavigationManager.NavigateTo("/information_supplier");
    }
}

<havi_app.Shared.Shared_layout.Footer />