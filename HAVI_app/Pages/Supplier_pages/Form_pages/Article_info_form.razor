@layout HAVI_app.Shared.Supplier_layout.Form_layout
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
@page "/article_info_form/{articleAll:Article}"
@inherits HAVI_app.Classes.Validation

<HAVI_app.Shared.Supplier_layout.Form_header SupplierState="filled" ArticleState="active" />


<div class="row justify-content-center">
    <div class="col-10">
        <h3>Article information:</h3>
        <p class="form-header-supplier">Fill out information regarding the article:</p>
    </div>
</div>

<div class="row justify-content-center ">
    <div class="col-12 d-flex justify-content-center">
        <form>
            <table class="table">

                <tr>
                    <td>
                        <label for="article_name" class="required">Article name:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control @ArticleNameValidated" name="article_name" @bind="ArticleName" required>
                    </td>
                    <td>
                        <div></div>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter the name of the article
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>

                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="salesunit" class="required">Salesunit:</label>
                    </td>
                    <td>
                        <select class="form-control" name="salesunit" required>
                            <option disabled selected>-- select an option --</option>
                            <option>Ark // 225</option>
                            <option>Bag in box // 204</option>
                            <option>Bakke // 374</option>
                        </select>
                    </td>
                    <td>
                        <div></div>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter the unit in which the article is delivered
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>

                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="article_pr_salesunit" class="required">Articles per salesunit:</label>
                    </td>
                    <td>
                        <input type="number" class="form-control @ArticlePerSalesunitValidated" name="article_pr_salesunit" @bind="ArticlePerSalesunit" required>
                    </td>
                    <td>
                        <div></div>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter how many articles are delivered per salesunit
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="supplier_article_nn" class="required">Supplier article number/name:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control @SupplierArticleNumberValidated" name="supplier_article_nn" @bind="SupplierArticleNumber" required>
                    </td>
                    <td>
                        <div></div>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter your own reference number or name for the article
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>

                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="GTIN" class="required">GTIN number:</label>
                    </td>
                    <td>
                        <input type="number" class="form-control" name="GTIN" @bind="GtinNumber" required max="14">
                    </td>
                    <td>
                        <div></div>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter 14 digits, if you have less than 14 digits then place 0's infront
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>

                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="Shelflife" class="required">Shelflife:</label>
                    </td>
                    <td>
                        <input type="number" class="form-control @ShelflifeValidated" name="Shelflife" @bind="Shelflife" required>
                    </td>
                    <td>
                        <label class="center-for-units" for="Shelflife">days</label>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter expiration time for the article in days
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>

                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="Min_shelflife" class="required">Min. shelflife at HAVI:</label>
                    </td>
                    <td>
                        <input type="number" class="form-control @ShelflifeAtHaviValidated" name="Min_shelflife" @bind="ShelflifeAtHavi" required>
                    </td>
                    <td>
                        <label class="center-for-units" for="Min_shelflife">days</label>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter the least amount of days that HAVI should have the article
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>

                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="Organic_article" class="required">Organic article?</label>
                    </td>

                    <td>
                        <div class="text-center">
                            <input type="radio" name="organic" value="yes">
                            <label for="yes">Yes</label>
                            &nbsp;
                            <input type="radio" value="no" name="organic">
                            <label for="no">No</label>
                        </div>
                    </td>
                    <td>
                        <div></div>
                    </td>
                    <td>
                        <HAVI_app.Shared.Shared_layout.Questionmark_top>
                            Enter whether the article is organic or not
                        </HAVI_app.Shared.Shared_layout.Questionmark_top>

                    </td>
                </tr>


            </table>
            <div class="row justify-content-center">
                <div class="text-right col-6">
                    <input type="button" class="btn cancel-button button-size" value="Back" @onclick="OnPostBack" />
                </div>
                <div class="text-left col-6">
                    <input type="button" class="btn green-button button-size" value="Next" @onclick="ValidationArticleInfoForm" />
                </div>
            </div>
        </form>
    </div>
</div>

@code{
    [Parameter]
    public string ArticleName { get; set; }

    [Parameter]
    public string SalesUnit { get; set; }

    [Parameter]
    public string ArticlePerSalesunit { get; set; }

    [Parameter]
    public string SupplierArticleNumber { get; set; }

    [Parameter]
    public string GtinNumber { get; set; }

    [Parameter]
    public string Shelflife { get; set; }

    [Parameter]
    public string ShelflifeAtHavi { get; set; }

    [Parameter]
    public string OrganicLife { get; set; }

    public string ArticleNameValidated;

    public string ArticlePerSalesunitValidated;

    public string SupplierArticleNumberValidated;

    public string ShelflifeValidated;

    public string ShelflifeAtHaviValidated;

    public void ValidationArticleInfoForm()
    {

        if (LettersOnly(ArticleName) &&
            NumbersOnly(ArticlePerSalesunit) &&
            NumbersOnly(SupplierArticleNumber) &&
            NumbersOnly(Shelflife) &&
            NumbersOnly(ShelflifeAtHavi))
        {
            NavigationManager.NavigateTo("/measurement_info_form", true);
        }

        if (!LettersOnly(ArticleName))
        {
            ArticleNameValidated = "btn-danger";
        }

        if (!NumbersOnly(ArticlePerSalesunit))
        {
            ArticlePerSalesunitValidated = "btn-danger";
        }

        if (!NumbersOnly(SupplierArticleNumberValidated))
        {
            ArticlePerSalesunitValidated = "btn-danger";
        }

        if (!NumbersOnly(ShelflifeValidated))
        {
            ShelflifeValidated = "btn-danger";
        }

        if (!NumbersOnly(ShelflifeAtHaviValidated))
        {
            ShelflifeAtHaviValidated = "btn-danger";
        }




    }

@code{

    public void OnPostForward()
    {
        // NavigationManager.NavigateTo($"/measurement_info_form", true);
    }

    public void OnPostBack()
    {
        NavigationManager.NavigateTo($"/supplier_info_form", true);
    }
}

}