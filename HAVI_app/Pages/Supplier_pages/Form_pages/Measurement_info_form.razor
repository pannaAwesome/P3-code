@layout HAVI_app.Shared.Supplier_layout.Form_layout
@page "/measurement_info_form"

<HAVI_app.Shared.Supplier_layout.Form_header SupplierState="filled" ArticleState="filled" MeasurementState="active" />

<div class="col-12">
    <h1>Measurement information:</h1>
    <p>Fill out information regarding your package measurements</p>

    <div class="justify-content-center row">
        <div class="col-12">
            <form>
                <table class="table">

                    <tr>
                        <td>
                            <label for="length" class="required">Length pr. salesunit:</label>
                        </td>
                        <td>
                            <input type="number" class="form-control" id="Length" required>
                        </td>
                        <td>
                            <label class="center-for-units" for="length">Cm</label>
                        </td>
                        <td>
                            <HAVI_app.Shared.Shared_layout.Questionmark_top>
                                The length of your salesunit written with numbers.
                            </HAVI_app.Shared.Shared_layout.Questionmark_top>

                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="width" class="required">Width pr. salesunit:</label>
                        </td>
                        <td>
                            <input type="number" class="form-control" id="width" required>
                        </td>
                        <td>
                            <label class="center-for-units" for="width">Cm</label>
                        </td>
                        <td>
                            <HAVI_app.Shared.Shared_layout.Questionmark_top>
                                The width of your salesunit written with numbers.
                            </HAVI_app.Shared.Shared_layout.Questionmark_top>

                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="height" class="required">Height pr. salesunit:</label>
                        </td>
                        <td>
                            <input type="number" class="form-control" id="height" required>
                        </td>
                        <td>
                            <label class="center-for-units" for="height">Cm</label>
                        </td>
                        <td>
                            <HAVI_app.Shared.Shared_layout.Questionmark_top>
                                The height of your salesunit written with numbers.
                            </HAVI_app.Shared.Shared_layout.Questionmark_top>

                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="net_weight" class="required">Net weight pr. salesunit:</label>
                        </td>
                        <td>
                            <input type="number" class="form-control" id="net_weight" required>
                        </td>
                        <td>
                            <label class="center-for-units" for="net_weight">Kg</label>
                        </td>
                        <td>
                            <HAVI_app.Shared.Shared_layout.Questionmark_top>
                                The weight without the packaging of the salesunit.
                            </HAVI_app.Shared.Shared_layout.Questionmark_top>

                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="gross_weight" class="required">Gross weight pr. salesunit:</label>
                        </td>
                        <td>
                            <input type="number" class="form-control" id="gross_weight" required>
                        </td>
                        <td>
                            <label class="center-for-units" for="gross_weight">Kg</label>
                        </td>
                        <td>
                            <HAVI_app.Shared.Shared_layout.Questionmark_top>
                                The weight with the packaging of the salesunit.
                            </HAVI_app.Shared.Shared_layout.Questionmark_top>

                        </td>
                    </tr>

                </table>
                <div class="row justify-content-center">
                    <div class="text-right col-6">
                        <NavLink class="nav-link" href="/article_info_form"><button class="btn cancel-button">Back</button></NavLink>
                    </div>
                    <div class="text-left col-6">
                        <NavLink class="nav-link" href="/shipment_info_form"><button class="btn green-button">Next</button></NavLink>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

