@page
@model HAVI_app.Pages.Contexts.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.ID" />
            <div class="form-group">
                <label asp-for="Article.PurchaserID" class="control-label"></label>
                <select asp-for="Article.PurchaserID" class="form-control" asp-items="ViewBag.PurchaserID"></select>
                <span asp-validation-for="Article.PurchaserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.CountryID" class="control-label"></label>
                <select asp-for="Article.CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
                <span asp-validation-for="Article.CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.SupplierID" class="control-label"></label>
                <select asp-for="Article.SupplierID" class="form-control" asp-items="ViewBag.SupplierID"></select>
                <span asp-validation-for="Article.SupplierID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleInformationID" class="control-label"></label>
                <select asp-for="Article.ArticleInformationID" class="form-control" asp-items="ViewBag.ArticleInformationID"></select>
                <span asp-validation-for="Article.ArticleInformationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.InternalArticleInformationID" class="control-label"></label>
                <select asp-for="Article.InternalArticleInformationID" class="form-control" asp-items="ViewBag.InternalArticleInformationID"></select>
                <span asp-validation-for="Article.InternalArticleInformationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.VailedForCustomer" class="control-label"></label>
                <input asp-for="Article.VailedForCustomer" class="form-control" />
                <span asp-validation-for="Article.VailedForCustomer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.DateCreated" class="control-label"></label>
                <input asp-for="Article.DateCreated" class="form-control" />
                <span asp-validation-for="Article.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Article.ArticleInformationCompleted" /> @Html.DisplayNameFor(model => model.Article.ArticleInformationCompleted)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Article.InternalArticleInformationCompleted" /> @Html.DisplayNameFor(model => model.Article.InternalArticleInformationCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleState" class="control-label"></label>
                <select asp-for="Article.ArticleState" class="form-control"></select>
                <span asp-validation-for="Article.ArticleState" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Article.ErrorReported" /> @Html.DisplayNameFor(model => model.Article.ErrorReported)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Article.ErrorMessage" class="control-label"></label>
                <input asp-for="Article.ErrorMessage" class="form-control" />
                <span asp-validation-for="Article.ErrorMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ErrorOwner" class="control-label"></label>
                <input asp-for="Article.ErrorOwner" class="form-control" />
                <span asp-validation-for="Article.ErrorOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
