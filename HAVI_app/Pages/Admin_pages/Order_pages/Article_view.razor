@page "/article_view"
@layout HAVI_app.Shared.Admin_layout.Overview

<h3>Overview of orders in the system:</h3>
<br />
<div class="row">
    <div class="col-md-2">
        <input type="text" placeholder="Search..">
    </div>
    <div class="col-md-10">
        <button class="btn button-options-overview" data-toggle="modal" data-target="#myModal">Transfer order</button>
        <div>
            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">


                        <div class="modal-header">
                            <h4 class="modal-title">Transfer order</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        
                        <div class="modal-body">
                            <form>
                                <label for="purchaser">Select purchaser:</label>
                                <select name="purchaser" id="purchaser">
                                    <option value="winnie">Winnie</option>
                                    <option value="anders">Anders</option>
                                    <option value="nikolaj">Nikolaj</option>
                                    <option value="esbjerg">Esbjerg</option>
                                </select>
                            </form>
                        </div>


                        <div class="modal-footer">
                            <button class="btn green-button" data-dismiss="modal">Transfer order</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
