@page "/user_view"
@layout HAVI_app.Shared.Admin_layout.Overview

<div class="row">
    <div class="col-10">
        <h3>Overview of users in the system:</h3>
    </div>
    <div class="col-2">
        <NavLink class="nav-link" href="/create_purchaser1">
            <button class="btn button-options-overview"  data-toggle="modal" data-target="#create-purchaser">Create purchaser</button>
        </NavLink>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
       <HAVI_app.Shared.Admin_layout.User_table_admin/>
    </div>
</div>

<div>
    <div class="modal" id="create-purchaser">
        <div class="modal-dialog">
            <div class="modal-content">


                <div class="modal-header">
                    <h4 class="modal-title">Create new purchaser</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>


                <div class="modal-body">
                    <form>
                        <label for="purchaser">Email:</label>
                        <input class="form-control" type="email" name="purchaser"/>
                    </form>
                </div>


                <div class="modal-footer">
                    <button class="btn cancel-button" data-dismiss="modal">Cancel</button>
                    <button class="btn green-button" data-dismiss="modal">Transfer order</button>
                </div>

            </div>
        </div>
    </div>
</div>